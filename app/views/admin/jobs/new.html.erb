<h1> 发布工作岗位</h1>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title,label:'名称',error:'名称不能为空' %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "工资下限"%>
<%= f.input :wage_upper_bound, :label => "工资上限"%>
<%= f.input :contact_email%>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
